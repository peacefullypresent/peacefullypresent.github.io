{
  "name": "personal-blog",
  "version": "1.0.0",
  "description": "Personal blog with static site generation",
  "scripts": {
    "build": "tailwindcss -i ./src/styles.css -o ./dist/styles.css --minify && node build.js",
    "dev": "node build.js && python3 -m http.server 8000 -d dist",
    "add-post": "node add-post.js"
  },
  "keywords": [
    "blog",
    "static-site"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "gray-matter": "^4.0.3",
    "marked": "^12.0.0"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.10",
    "tailwindcss": "^3.4.0"
  }
}
